                <h4 class="cant">Cantidad</h4>
                <h4 class="price">Precio</h4>
            </div>
            <article>
                <div class="description-product">
                    <img src="img/pulseras.jpg" alt="product" class="img-prod">
                    <p>Pulsera</p>
                </div>
                <p class="p1">2</p>
                <p class="p2">$7000</p>
            </article>
            <article>
                <div class="description-product">
                    <img src="img/pulseras.jpg" alt="product" class="img-prod">
                    <p>Pulsera</p>
                </div>
                <p class="p1">2</p>
                <p class="p2">$7000</p>
            </article>
            <ul>
                <li class="li-cart">
                    <p>Subtotal</p>
                    <p>$0000</p>
                </li>
                <li class="li-cart">
                    <p>Envio</p>
                    <p>$0000</p>
                </li>
                <li class="li-cart">
                    <p>Total</p>
                    <p>$0000</p>
                </li>
            </ul>
            <br>
            <button type="button" class="button-pay">Pagar</button>
            <a href="/" class="a-cart">Ver más productos</a>
        </section>
    </main>
    <%- include('./partials/footerP.ejs') %>
